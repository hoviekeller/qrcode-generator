{
  "version": "0.1.5",
  "manifest_version": 3,
  "offline_enabled": true,
  "name": "QR Code Generator",
  "homepage_url": "https://mybrowseraddon.com/qrcode-generator.html",
  "description": "Generate QR code from any text and save it as an SVG image",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage", 
    "contextMenus"
  ],
  "action": {
    "default_title": "QR Code Generator",
    "default_icon": {
      "16": "data/icons/toolbar/16.png",
      "32": "data/icons/toolbar/32.png",
      "48": "data/icons/toolbar/48.png",
      "64": "data/icons/toolbar/64.png"
    }
  },
  "icons": {
    "16": "data/icons/16.png",
    "32": "data/icons/32.png",
    "48": "data/icons/48.png",
    "64": "data/icons/64.png",
    "128": "data/icons/128.png"
  }
}
